@model List<Flixer.Models.Movie>

@{
    ViewData["Title"] = "Movies";
}

<h2>@ViewData["Title"]</h2>
<p>
    This page shows all of the movies. Click on one to read more about it.<br/>
    You can also @Html.ActionLink("Add a new movie", "AddNew", new { }, new { @class="btn btn-success"}) if you want.
</p>

<ul class="movies">
    @foreach (var movie in Model)
    {
        <li class="movie-item">
            <p>@Html.ActionLink(movie.Title, "SingleMovie", new { id = movie.Id })</p>
        </li>
    }
</ul>